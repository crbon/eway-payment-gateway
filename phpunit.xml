<?xml version="1.0"?>
<phpunit
	bootstrap="tests/bootstrap.php"
	backupGlobals="false"
	colors="true"
	convertErrorsToExceptions="true"
	convertNoticesToExceptions="true"
	convertWarningsToExceptions="true"
	>
	<testsuites>
		<testsuite name="eway-payment-gateway">
			<directory prefix="test-" suffix=".php">./tests/</directory>
		</testsuite>
	</testsuites>
	<groups>
		<exclude>
			<group>woocommerce</group>
			<group>wp-e-commerce</group>
			<group>events-manager</group>
			<!-- <group>event-espresso</group> -->
			<group>awpcp</group>
		</exclude>
	</groups>
</phpunit>
